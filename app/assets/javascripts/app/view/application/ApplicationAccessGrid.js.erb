Ext.define('CD.view.application.ApplicationAccessGrid', {
    extend: 'Ext.grid.Panel',
    alias: 'widget.applicationAccessGrid',

    store: 'ApplicationAccessStore',


    initComponent: function() {
        var me = this;

        me.cellEditing = new Ext.grid.plugin.CellEditing({
            clicksToEdit: 1
        });

        Ext.applyIf(me, {

            plugins: [this.cellEditing],

            columns: [
                {
                    xtype: 'gridcolumn',
                    dataIndex: 'name',
                    width: 250,
                    text: 'Name'
                },
                {
                    xtype: 'gridcolumn',
                    flex: 1,
                    dataIndex: 'description',
                    text: 'Description',
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                }
            ],

            selModel: {
                selType: 'cellmodel'
            },

            dockedItems: [
                {
                    xtype: 'toolbar',
                    dock: 'bottom',
                    itemId: 'bottomToolbar',
                    items: [
                        {
                            xtype: 'button',
                            text: 'Add Grant'
                        }
                    ]
                }
            ]
        });

        me.callParent(arguments);
    }

});