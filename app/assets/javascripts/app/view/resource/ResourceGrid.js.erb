Ext.define('CD.view.resource.ResourceGrid', {
    extend: 'Ext.grid.Panel',
    alias: 'widget.resourcegrid',

    store: 'ResourceStore',
    itemId: 'resourceGridItemId',


    initComponent: function() {
        var me = this;

        Ext.applyIf(me, {
            columns: [
                {
                    xtype: 'gridcolumn',
                    dataIndex: 'name',
                    text: 'Name',
                    editor: {
                        xtype: 'textfield'
                    }
                },
                {
                    xtype: 'gridcolumn',
                    dataIndex: 'resource_type',
                    text: 'Type',
                    editor: {
                        xtype: 'textfield'
                    }
                },
                {
                    xtype: 'gridcolumn',
                    flex: 1,
                    dataIndex: 'description',
                    text: 'Description',
                    editor: {
                        xtype: 'textfield'
                    }
                }
            ]
        });

        me.callParent(arguments);
    }

});